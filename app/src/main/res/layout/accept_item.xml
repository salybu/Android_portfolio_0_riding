<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/border_updown">

    <ImageView
        android:id="@+id/moimprofile"
        android:layout_width="68dp"
        android:layout_height="62dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        tools:srcCompat="@tools:sample/avatars[1]" />

    <TextView
        android:id="@+id/message0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참여를 요청하신 ["
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/moimprofile" />

    <TextView
        android:id="@+id/moim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임이름"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/message0"/>

    <TextView
        android:id="@+id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="] 모임에"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/moim"/>

    <TextView
        android:id="@+id/message3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참여요청이 "
        app:layout_constraintTop_toBottomOf="@id/message0"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/message0"/>

    <TextView
        android:id="@+id/acceptordeny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수락"
        app:layout_constraintTop_toBottomOf="@id/message0"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/message3"/>

    <TextView
        android:id="@+id/message5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="되었습니다."
        app:layout_constraintTop_toBottomOf="@id/message0"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/acceptordeny"/>

</android.support.constraint.ConstraintLayout>
